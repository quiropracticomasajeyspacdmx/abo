                    <textarea id="desc" rows="4" placeholder="Describa los hechos principales..."></textarea>
                    
                    <label style="color:#94a3b8; font-size:12px; font-weight:bold; margin-top:15px; display:block">Nivel de Urgencia</label>
                    <select id="urgencia">
                        <option value="baja">Normal</option>
